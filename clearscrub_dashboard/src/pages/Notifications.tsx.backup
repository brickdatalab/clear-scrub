import React, { useState, useEffect } from 'react'
import { Plus, Mail, Webhook, Trash2, Copy, CheckCircle, AlertCircle, Globe, Send } from 'lucide-react'
import { api, type EmailNotification, type Webhook as WebhookType } from '../services/api'
import { useAuth } from '../hooks/useAuth'

// Available event types for subscriptions
const availableEmailEvents = [
  { value: 'application_submitted', label: 'Application Submitted' },
  { value: 'processing_completed', label: 'Processing Completed' },
  { value: 'processing_failed', label: 'Processing Failed' },
  { value: 'document_uploaded', label: 'Document Uploaded' },
  { value: 'monthly_report', label: 'Monthly Report' }
]

const availableWebhookEvents = [
  { value: 'application.submitted', label: 'Application Submitted' },
  { value: 'processing.completed', label: 'Processing Completed' },
  { value: 'processing.failed', label: 'Processing Failed' },
  { value: 'document.uploaded', label: 'Document Uploaded' },
  { value: 'statement.parsed', label: 'Statement Parsed' },
  { value: 'debt.detected', label: 'Debt Detected' }
]

export default function Notifications() {
  const { user } = useAuth()
  const orgId = user?.org_id

  // State
  const [emailNotifications, setEmailNotifications] = useState<EmailNotification[]>([])
  const [webhookNotifications, setWebhookNotifications] = useState<WebhookType[]>([])
  const [loading, setLoading] = useState(true)
  const [error, setError] = useState<string | null>(null)
  const [success, setSuccess] = useState<string | null>(null)

  // Form state
  const [showEmailForm, setShowEmailForm] = useState(false)
  const [showWebhookForm, setShowWebhookForm] = useState(false)
  const [newEmail, setNewEmail] = useState('')
  const [selectedEmailEvents, setSelectedEmailEvents] = useState<string[]>([])
  const [newWebhook, setNewWebhook] = useState({
    name: '',
    url: '',
    events: [] as string[]
  })
  // Fetch notifications on mount
  useEffect(() => {
    if (orgId) {
      fetchNotifications()
    }
  }, [orgId])

  // Auto-clear messages after 5 seconds
  useEffect(() => {
    if (error || success) {
      const timer = setTimeout(() => {
        setError(null)
        setSuccess(null)
      }, 5000)
      return () => clearTimeout(timer)
    }
  }, [error, success])

  // Fetch all notifications
  const fetchNotifications = async () => {
    if (!orgId) return

    setLoading(true)
    setError(null)

    try {
      const [emails, webhooks] = await Promise.all([
        api.getEmailNotifications(orgId),
        api.getWebhooks(orgId)
      ])
      setEmailNotifications(emails)
      setWebhookNotifications(webhooks)
    } catch (err: any) {
      console.error('Failed to fetch notifications:', err)
      setError(err.message || 'Failed to load notifications')
    } finally {
      setLoading(false)
    }
  }

  // ============================================================================
  // EMAIL NOTIFICATION HANDLERS
  // ============================================================================

  const handleAddEmail = async () => {
    if (!orgId || !newEmail || !newEmail.includes('@')) return

    setError(null)
    setSuccess(null)

    try {
      await api.addEmailNotification(orgId, newEmail, selectedEmailEvents)
      setSuccess('Email notification added successfully')
      setNewEmail('')
      setSelectedEmailEvents([])
      setShowEmailForm(false)
      await fetchNotifications()
    } catch (err: any) {
      console.error('Failed to add email notification:', err)
      setError(err.message || 'Failed to add email notification')
    }
  }

  const handleUpdateEmailEvents = async (notificationId: string, newEvents: string[]) => {
    setError(null)

    try {
      await api.updateEmailNotification(notificationId, newEvents)
      setSuccess('Email notification updated successfully')
      await fetchNotifications()
    } catch (err: any) {
      console.error('Failed to update email notification:', err)
      setError(err.message || 'Failed to update email notification')
    }
  }

  const handleToggleEmailStatus = async (notificationId: string, currentStatus: 'active' | 'inactive') => {
    setError(null)

    try {
      const newStatus = currentStatus === 'active' ? 'inactive' : 'active'
      await api.updateEmailNotification(notificationId, []) // Keep existing events
      setSuccess(`Email notification ${newStatus === 'active' ? 'activated' : 'deactivated'}`)
      await fetchNotifications()
    } catch (err: any) {
      console.error('Failed to toggle email status:', err)
      setError(err.message || 'Failed to toggle email status')
    }
  }

  const handleDeleteEmail = async (notificationId: string) => {
    if (!confirm('Are you sure you want to delete this email notification?')) return

    setError(null)

    try {
      await api.removeEmailNotification(notificationId)
      setSuccess('Email notification deleted successfully')
      await fetchNotifications()
    } catch (err: any) {
      console.error('Failed to delete email notification:', err)
      setError(err.message || 'Failed to delete email notification')
    }
  }

  const handleTestEmail = async (notificationId: string) => {
    setError(null)
    setSuccess(null)

    try {
      await api.testEmailNotification(notificationId)
      setSuccess('Test email sent successfully')
    } catch (err: any) {
      console.error('Failed to send test email:', err)
      setError(err.message || 'Failed to send test email')
    }
  }

  // ============================================================================
  // WEBHOOK HANDLERS
  // ============================================================================

  const handleAddWebhook = async () => {
    if (!orgId || !newWebhook.name || !newWebhook.url || newWebhook.events.length === 0) return

    setError(null)
    setSuccess(null)

    try {
      await api.createWebhook(orgId, newWebhook.name, newWebhook.url, newWebhook.events)
      setSuccess('Webhook created successfully')
      setNewWebhook({ name: '', url: '', events: [] })
      setShowWebhookForm(false)
      await fetchNotifications()
    } catch (err: any) {
      console.error('Failed to create webhook:', err)
      setError(err.message || 'Failed to create webhook')
    }
  }

  const handleUpdateWebhook = async (webhookId: string, updates: { name?: string; url?: string; events?: string[]; status?: 'active' | 'inactive' | 'failed' }) => {
    setError(null)

    try {
      await api.updateWebhook(webhookId, updates)
      setSuccess('Webhook updated successfully')
      await fetchNotifications()
    } catch (err: any) {
      console.error('Failed to update webhook:', err)
      setError(err.message || 'Failed to update webhook')
    }
  }

  const handleToggleWebhookStatus = async (webhookId: string, currentStatus: 'active' | 'inactive' | 'failed') => {
    setError(null)

    try {
      const newStatus = currentStatus === 'active' ? 'inactive' : 'active'
      await api.updateWebhook(webhookId, { status: newStatus })
      setSuccess(`Webhook ${newStatus === 'active' ? 'activated' : 'deactivated'}`)
      await fetchNotifications()
    } catch (err: any) {
      console.error('Failed to toggle webhook status:', err)
      setError(err.message || 'Failed to toggle webhook status')
    }
  }

  const handleDeleteWebhook = async (webhookId: string) => {
    if (!confirm('Are you sure you want to delete this webhook?')) return

    setError(null)

    try {
      await api.deleteWebhook(webhookId)
      setSuccess('Webhook deleted successfully')
      await fetchNotifications()
    } catch (err: any) {
      console.error('Failed to delete webhook:', err)
      setError(err.message || 'Failed to delete webhook')
    }
  }

  const handleTestWebhook = async (webhookId: string) => {
    setError(null)
    setSuccess(null)

    try {
      const result = await api.testWebhook(webhookId)
      if (result.success) {
        setSuccess('Webhook test successful')
      } else {
        setError(`Webhook test failed: ${result.response?.error || 'Unknown error'}`)
      }
    } catch (err: any) {
      console.error('Failed to test webhook:', err)
      setError(err.message || 'Failed to test webhook')
    }
  }

  // ============================================================================
  // UTILITY FUNCTIONS
  // ============================================================================

  const formatDate = (dateString: string) => {
    return new Date(dateString).toLocaleDateString('en-US', {
      year: '2-digit',
      month: '2-digit',
      day: '2-digit',
    })
  }

  const copyToClipboard = (text: string) => {
    navigator.clipboard.writeText(text)
    setSuccess('Copied to clipboard')
  }

  const toggleEmailEvent = (event: string) => {
    setSelectedEmailEvents(prev =>
      prev.includes(event) ? prev.filter(e => e !== event) : [...prev, event]
    )
  }

  const toggleWebhookEvent = (event: string) => {
    setNewWebhook(prev => ({
      ...prev,
      events: prev.events.includes(event)
        ? prev.events.filter(e => e !== event)
        : [...prev.events, event]
    }))
  }

  // Loading state
  if (loading) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600 mx-auto mb-4"></div>
          <p className="text-gray-600">Loading notifications...</p>
        </div>
      </div>
    )
  }

  return (
    <div className="space-y-8">
      {/* Global Messages */}
      {error && (
        <div className="bg-red-50 border border-red-200 rounded-8 p-4 flex items-start gap-3">
          <AlertCircle className="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" />
          <div className="flex-1">
            <p className="text-14 font-medium text-red-900">Error</p>
            <p className="text-13 text-red-700">{error}</p>
          </div>
        </div>
      )}

      {success && (
        <div className="bg-green-50 border border-green-200 rounded-8 p-4 flex items-start gap-3">
          <CheckCircle className="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" />
          <div className="flex-1">
            <p className="text-14 font-medium text-green-900">Success</p>
            <p className="text-13 text-green-700">{success}</p>
          </div>
        </div>
      )}

      {/* Page Header */}
      <div className="flex flex-col lg:flex-row lg:justify-between lg:items-start gap-4">
        <div className="flex-1">
          <h1 className="text-32 font-bold text-gray-900 mb-2">Notifications</h1>
          <p className="text-16 text-gray-600">
            Configure email and webhook notifications for important events and updates
          </p>
        </div>
      </div>

      {/* Email Notifications Section */}
      <div className="bg-white rounded-12 border border-gray-200 p-6">
        <div className="flex items-center justify-between mb-6">
          <div className="flex items-center gap-3">
            <div className="w-10 h-10 bg-blue-100 rounded-8 flex items-center justify-center">
              <Mail className="w-5 h-5 text-blue-600" />
            </div>
            <div>
              <h2 className="text-18 font-semibold text-gray-900">Email Notifications</h2>
              <p className="text-14 text-gray-600">Receive notifications via email</p>
            </div>
          </div>
          <button
            onClick={() => setShowEmailForm(true)}
            className="btn-primary flex items-center gap-2"
          >
            <Plus className="w-4 h-4" />
            Add Email
          </button>
        </div>

        {/* Add Email Form */}
        {showEmailForm && (
          <div className="mb-6 p-4 bg-gray-50 rounded-8 border border-gray-200">
            <div className="space-y-4">
              <div>
                <label className="block text-13 font-medium text-gray-700 mb-2">Email Address</label>
                <input
                  type="email"
                  placeholder="Enter email address"
                  value={newEmail}
                  onChange={(e) => setNewEmail(e.target.value)}
                  className="w-full px-3 py-2 border border-gray-300 rounded-6 focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                />
              </div>
              <div>
                <label className="block text-13 font-medium text-gray-700 mb-2">Events to subscribe to</label>
                <div className="grid grid-cols-2 md:grid-cols-3 gap-2">
                  {availableEmailEvents.map((event) => (
                    <label key={event.value} className="flex items-center gap-2 cursor-pointer">
                      <input
                        type="checkbox"
                        checked={selectedEmailEvents.includes(event.value)}
                        onChange={() => toggleEmailEvent(event.value)}
                        className="rounded border-gray-300 text-primary-600 focus:ring-primary-500"
                      />
                      <span className="text-13 text-gray-700">{event.label}</span>
                    </label>
                  ))}
                </div>
              </div>
              <div className="flex gap-3">
                <button
                  onClick={handleAddEmail}
                  className="btn-primary"
                  disabled={!newEmail || !newEmail.includes('@') || selectedEmailEvents.length === 0}
                >
                  Add Email
                </button>
                <button
                  onClick={() => {
                    setShowEmailForm(false)
                    setNewEmail('')
                    setSelectedEmailEvents([])
                  }}
                  className="btn-secondary"
                >
                  Cancel
                </button>
              </div>
            </div>
          </div>
        )}

        {emailNotifications.length > 0 ? (
          <div className="overflow-x-auto">
            <table className="w-full">
              <thead className="bg-gray-50 border-b border-gray-200">
                <tr className="grid grid-cols-5 items-center h-11 gap-4">
                  <th className="table-header text-left px-3">Email Address</th>
                  <th className="table-header text-left px-3">Events</th>
                  <th className="table-header text-center px-3">Status</th>
                  <th className="table-header text-left px-3">Added</th>
                  <th className="table-header text-right px-3">Actions</th>
                </tr>
              </thead>
              <tbody>
                {emailNotifications.map((notification) => (
                  <tr key={notification.id} className="grid grid-cols-5 items-center min-h-14 border-b border-gray-100 hover:bg-gray-50 transition-colors duration-150 gap-4 py-2">
                    <td className="px-3">
                      <div className="flex items-center gap-3">
                        <Mail className="w-4 h-4 text-gray-400" />
                        <span className="table-cell font-medium">{notification.email}</span>
                      </div>
                    </td>
                    <td className="px-3">
                      <div className="flex flex-wrap gap-1">
                        {notification.events.slice(0, 2).map((event) => (
                          <span key={event} className="inline-flex items-center px-2 py-0.5 rounded-full text-11 bg-blue-100 text-blue-700">
                            {availableEmailEvents.find(e => e.value === event)?.label || event}
                          </span>
                        ))}
                        {notification.events.length > 2 && (
                          <span className="inline-flex items-center px-2 py-0.5 rounded-full text-11 bg-gray-100 text-gray-600">
                            +{notification.events.length - 2}
                          </span>
                        )}
                      </div>
                    </td>
                    <td className="px-3 flex justify-center">
                      <span className={`inline-flex items-center px-2 py-1 rounded-full text-12 font-medium ${notification.status === 'active' ? 'text-green-600 bg-green-100' : 'text-gray-600 bg-gray-100'}`}>
                        {notification.status === 'active' ? 'Active' : 'Inactive'}
                      </span>
                    </td>
                    <td className="px-3 table-cell text-gray-500">{formatDate(notification.created_at)}</td>
                    <td className="px-3">
                      <div className="flex items-center justify-end gap-2">
                        <button onClick={() => handleTestEmail(notification.id)} className="p-2 hover:bg-blue-100 rounded-6 transition-colors duration-150" title="Send test email">
                          <Send className="w-4 h-4 text-blue-600" />
                        </button>
                        <button onClick={() => copyToClipboard(notification.email)} className="p-2 hover:bg-gray-200 rounded-6 transition-colors duration-150" title="Copy email">
                          <Copy className="w-4 h-4 text-gray-500" />
                        </button>
                        <button onClick={() => handleToggleEmailStatus(notification.id, notification.status)} className={`px-3 py-1.5 rounded-6 text-12 font-medium transition-colors duration-150 ${notification.status === 'active' ? 'bg-red-100 text-red-600 hover:bg-red-200' : 'bg-green-100 text-green-600 hover:bg-green-200'}`}>
                          {notification.status === 'active' ? 'Disable' : 'Enable'}
                        </button>
                        <button onClick={() => handleDeleteEmail(notification.id)} className="p-2 hover:bg-red-100 rounded-6 transition-colors duration-150" title="Delete email">
                          <Trash2 className="w-4 h-4 text-red-500" />
                        </button>
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <div className="text-center py-8">
            <Mail className="w-8 h-8 text-gray-300 mx-auto mb-2" />
            <p className="text-14 font-medium text-gray-900 mb-1">No email notifications configured</p>
            <p className="text-12 text-gray-500">Add an email address to receive notifications for important events</p>
          </div>
        )}
      </div>

      {/* Webhook Notifications Section */}
      <div className="bg-white rounded-12 border border-gray-200 p-6">
        <div className="flex items-center justify-between mb-6">
          <div className="flex items-center gap-3">
            <div className="w-10 h-10 bg-purple-100 rounded-8 flex items-center justify-center">
              <Webhook className="w-5 h-5 text-purple-600" />
            </div>
            <div>
              <h2 className="text-18 font-semibold text-gray-900">Webhook Notifications</h2>
              <p className="text-14 text-gray-600">Send HTTP notifications to external services</p>
            </div>
          </div>
          <button
            onClick={() => setShowWebhookForm(true)}
            className="btn-primary flex items-center gap-2"
          >
            <Plus className="w-4 h-4" />
            Add Webhook
          </button>
        </div>

        {/* Add Webhook Form */}
        {showWebhookForm && (
          <div className="mb-6 p-4 bg-gray-50 rounded-8 border border-gray-200">
            <div className="space-y-4">
              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                <input
                  type="text"
                  placeholder="Webhook name"
                  value={newWebhook.name}
                  onChange={(e) => setNewWebhook(prev => ({ ...prev, name: e.target.value }))}
                  className="px-3 py-2 border border-gray-300 rounded-6 focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                />
                <input
                  type="url"
                  placeholder="https://api.example.com/webhook"
                  value={newWebhook.url}
                  onChange={(e) => setNewWebhook(prev => ({ ...prev, url: e.target.value }))}
                  className="px-3 py-2 border border-gray-300 rounded-6 focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                />
              </div>
              <div>
                <label className="block text-13 font-medium text-gray-700 mb-2">Events to monitor</label>
                <div className="grid grid-cols-2 md:grid-cols-3 gap-2">
                  {availableWebhookEvents.map((event) => (
                    <label key={event.value} className="flex items-center gap-2 cursor-pointer">
                      <input
                        type="checkbox"
                        checked={newWebhook.events.includes(event.value)}
                        onChange={() => toggleWebhookEvent(event.value)}
                        className="rounded border-gray-300 text-primary-600 focus:ring-primary-500"
                      />
                      <span className="text-13 text-gray-700">{event.label}</span>
                    </label>
                  ))}
                </div>
              </div>
              <div className="flex gap-3">
                <button
                  onClick={handleAddWebhook}
                  className="btn-primary"
                  disabled={!newWebhook.name || !newWebhook.url || newWebhook.events.length === 0}
                >
                  Add Webhook
                </button>
                <button
                  onClick={() => {
                    setShowWebhookForm(false)
                    setNewWebhook({ name: '', url: '', events: [] })
                  }}
                  className="btn-secondary"
                >
                  Cancel
                </button>
              </div>
            </div>
          </div>
        )}

        {webhookNotifications.length > 0 ? (
          <div className="overflow-x-auto">
            <table className="w-full">
              <thead className="bg-gray-50 border-b border-gray-200">
                <tr className="grid grid-cols-6 items-center h-11 gap-4">
                  <th className="table-header text-left px-3">Name</th>
                  <th className="table-header text-left px-3">URL</th>
                  <th className="table-header text-left px-3">Events</th>
                  <th className="table-header text-center px-3">Status</th>
                  <th className="table-header text-left px-3">Last Triggered</th>
                  <th className="table-header text-right px-3">Actions</th>
                </tr>
              </thead>
              <tbody>
                {webhookNotifications.map((webhook) => (
                  <tr key={webhook.id} className="grid grid-cols-6 items-center min-h-14 border-b border-gray-100 hover:bg-gray-50 transition-colors duration-150 gap-4 py-2">
                    <td className="px-3">
                      <div className="flex items-center gap-3">
                        <Webhook className="w-4 h-4 text-gray-400" />
                        <span className="table-cell font-medium">{webhook.name || 'Unnamed Webhook'}</span>
                      </div>
                    </td>
                    <td className="px-3">
                      <div className="flex items-center gap-2">
                        <span className="table-cell text-gray-600 font-mono text-12">
                          {webhook.url.length > 30 ? `${webhook.url.substring(0, 30)}...` : webhook.url}
                        </span>
                        <button onClick={() => copyToClipboard(webhook.url)} className="p-1 hover:bg-gray-200 rounded-4 transition-colors duration-150" title="Copy URL">
                          <Copy className="w-3 h-3 text-gray-500" />
                        </button>
                      </div>
                    </td>
                    <td className="px-3">
                      <div className="flex flex-wrap gap-1">
                        {webhook.events.slice(0, 2).map((event) => (
                          <span key={event} className="inline-flex items-center px-2 py-0.5 rounded-full text-11 bg-purple-100 text-purple-700">
                            {availableWebhookEvents.find(e => e.value === event)?.label || event}
                          </span>
                        ))}
                        {webhook.events.length > 2 && (
                          <span className="inline-flex items-center px-2 py-0.5 rounded-full text-11 bg-gray-100 text-gray-600">+{webhook.events.length - 2}</span>
                        )}
                      </div>
                    </td>
                    <td className="px-3 flex justify-center">
                      <span className={`inline-flex items-center px-2 py-1 rounded-full text-12 font-medium ${
                        webhook.status === 'active'
                          ? 'text-green-600 bg-green-100'
                          : webhook.status === 'failed'
                          ? 'text-red-600 bg-red-100'
                          : 'text-gray-600 bg-gray-100'
                      }`}>
                        {webhook.status.charAt(0).toUpperCase() + webhook.status.slice(1)}
                      </span>
                    </td>
                    <td className="px-3 table-cell text-gray-500">
                      {webhook.last_triggered_at ? formatDate(webhook.last_triggered_at) : 'Never'}
                    </td>
                    <td className="px-3">
                      <div className="flex items-center justify-end gap-2">
                        <button
                          onClick={() => handleTestWebhook(webhook.id)}
                          className="p-2 hover:bg-blue-100 rounded-6 transition-colors duration-150"
                          title="Test webhook"
                        >
                          <Send className="w-4 h-4 text-blue-600" />
                        </button>
                        <button
                          onClick={() => handleToggleWebhookStatus(webhook.id, webhook.status)}
                          className={`px-3 py-1.5 rounded-6 text-12 font-medium transition-colors duration-150 ${
                            webhook.status === 'active'
                              ? 'bg-red-100 text-red-600 hover:bg-red-200'
                              : 'bg-green-100 text-green-600 hover:bg-green-200'
                          }`}
                        >
                          {webhook.status === 'active' ? 'Disable' : 'Enable'}
                        </button>
                        <button
                          onClick={() => handleDeleteWebhook(webhook.id)}
                          className="p-2 hover:bg-red-100 rounded-6 transition-colors duration-150"
                          title="Delete webhook"
                        >
                          <Trash2 className="w-4 h-4 text-red-500" />
                        </button>
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <div className="text-center py-8">
            <Webhook className="w-8 h-8 text-gray-300 mx-auto mb-2" />
            <p className="text-14 font-medium text-gray-900 mb-1">No webhook notifications configured</p>
            <p className="text-12 text-gray-500">Add a webhook endpoint to receive HTTP notifications</p>
          </div>
        )}
      </div>

      {/* Stats Footer */}
      <div className="border-t border-gray-200 pt-6">
        <div className="grid grid-cols-1 sm:grid-cols-2 gap-4 text-center">
          <div>
            <div className="text-20 font-bold text-gray-900">{emailNotifications.filter(e => e.status === 'active').length}</div>
            <div className="text-13 text-gray-500">Active Email Notifications</div>
          </div>
          <div>
            <div className="text-20 font-bold text-gray-900">{webhookNotifications.filter(w => w.status === 'active').length}</div>
            <div className="text-13 text-gray-500">Active Webhook Notifications</div>
          </div>
        </div>
      </div>
    </div>
  )
}
